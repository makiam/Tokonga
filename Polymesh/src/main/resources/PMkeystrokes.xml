<keystrokes>
    <keystroke code="88" name="Decrease smoothing level (PolyMesh)" group="Polymesh">
        <!-- Constant for the "X" key. -->
        if(window instanceof PolyMeshEditorWindow) {
            window.log.info("Decrease smoothing level (PolyMesh)")
            window.changeInteractiveSmoothLevel(-1);
        }
    </keystroke>
    <keystroke code="67" name="Increase smoothing level (PolyMesh)" group="Polymesh">
        <!-- Constant for the "C" key. -->
        if(window instanceof PolyMeshEditorWindow) {
            window.log.info("Increase smoothing level (PolyMesh)")
            window.changeInteractiveSmoothLevel(1);
        }
    </keystroke>
    <keystroke code="66" name="Select Bevel Tool (PolyMesh)" group="Polymesh">
