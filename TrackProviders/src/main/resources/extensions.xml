<?xml version="1.0" standalone="yes"?>
<extension name="TrackProviders" version="1.0">
    <author>Maksim Khramov</author>
    <date>2024</date>
    <description>
        This plugin contains the standard animation tracks which are included with Art of Illusion.
    </description>

    <plugin class="artofillusion.tools.OneAxisPositionTrackProvider"/>
    <plugin class="artofillusion.tools.ThreeAxisPositionTrackProvider"/>
    <plugin class="artofillusion.tools.ProceduralPositionTrackProvider"/>

    <plugin class="artofillusion.tools.OneAxisRotationTrackProvider"/>
    <plugin class="artofillusion.tools.ThreeAxisRotationTrackProvider"/>    
    <plugin class="artofillusion.tools.ProceduralRotationTrackProvider"/>
    <plugin class="artofillusion.tools.QuaternionRotationTrackProvider"/>

    <plugin class="artofillusion.tools.BendDistortionTrackProvider"/>
    <plugin class="artofillusion.tools.CustomDistortionTrackProvider"/>
    <plugin class="artofillusion.tools.ScaleDistortionTrackProvider"/>
    <plugin class="artofillusion.tools.ShatterDistortionTrackProvider"/>
    <plugin class="artofillusion.tools.TwistDistortionTrackProvider"/>

    <plugin class="artofillusion.tools.ConstraintTrackProvider"/>


    <plugin class="artofillusion.tools.VisibilityTrackProvider"/>
    <plugin class="artofillusion.tools.PoseTrackProvider"/>
    <plugin class="artofillusion.tools.TextureTrackProvider"/>

</extension>

